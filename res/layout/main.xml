<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        android:src="@drawable/titles" />
    
    <ImageView
        android:id="@+id/dot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ivTitlePac"
        android:layout_alignTop="@+id/ivTitlePac"
        android:layout_marginRight="100dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/dot" />
    
    <ImageView
        android:id="@+id/dot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ivTitlePac"
        android:layout_alignTop="@+id/ivTitlePac"
        android:layout_marginRight="30dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/dot" />
    
    <ImageView
        android:id="@+id/ivTitlePac"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginTop="330dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/pac_man_logo" />

    <ImageView
        android:id="@+id/ivPressPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/press_play" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/game_by" />

</RelativeLayout>
